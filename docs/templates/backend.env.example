# Backend Environment Variables Template
# Copy this file to app/backend/.env and fill in your actual values
# NEVER commit .env files to version control

# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/crypto_curriculum
DATABASE_ECHO=false  # Set to true for SQL query logging

# Security
SECRET_KEY=your-secret-key-min-32-characters-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Configuration
CORS_ORIGINS=http://localhost:5173,http://localhost:3000
CORS_ALLOW_CREDENTIALS=true

# LLM API Keys (for AI Trading Bot features)
OPENAI_API_KEY=sk-...
ANTHROPIC_API_KEY=sk-ant-...
OLLAMA_BASE_URL=http://localhost:11434

# LLM Provider Configuration (default provider)
DEFAULT_LLM_PROVIDER=anthropic
DEFAULT_LLM_MODEL=claude-3-5-sonnet-20241022
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=2000

# External APIs (optional - for trading bot data sources)
# COINGECKO_API_KEY=...
# BINANCE_API_KEY=...
# BINANCE_API_SECRET=...
# TWITTER_BEARER_TOKEN=...
# REDDIT_CLIENT_ID=...
# REDDIT_CLIENT_SECRET=...
# INFURA_PROJECT_ID=...
# ETHERSCAN_API_KEY=...

# Application Settings
ENVIRONMENT=development  # development, staging, production
DEBUG=true
LOG_LEVEL=INFO

# Email Configuration (optional - for notifications)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# FROM_EMAIL=noreply@cryptocurriculum.com

# Redis (optional - for caching)
# REDIS_URL=redis://localhost:6379/0

# File Upload
MAX_UPLOAD_SIZE_MB=10
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf

